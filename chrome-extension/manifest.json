{
  "manifest_version": 2,

  "name": "空污污流流 - Taiwan Air Pollution Map on Windyty",
  "description": "A chrome extension shows air pollution data of Taiwan on Windyty",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click to Draw"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "96": "icon.png"
  }
}
